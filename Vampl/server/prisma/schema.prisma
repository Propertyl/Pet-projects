generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model chats {
  id        Int    @id @default(autoincrement())
  chatId    String @unique(map: "Chats_chatId_key")
  chatUsers Json
  messages  Json
}

model locales {
  page     String @db.VarChar(20)
  language String @db.VarChar(2)
  text     Json
  id       Int    @id @default(autoincrement())
}

model onlinestatuses {
  id     Int     @id @default(autoincrement())
  status Boolean
  phone  String  @unique(map: "OnlineStatuses_phone_key")
}

model user {
  id        Int     @id @default(autoincrement())
  name      String
  image     String?
  phone     String  @unique(map: "User_phone_key")
  birthData String?
  password  String
}

model usertheme {
  id    Int    @id @default(autoincrement())
  theme String @default("light")
  phone String @unique(map: "UserTheme_phone_key")
}

model months {
  id       BigInt @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  month_en String @db.VarChar(20)
  month_uk String @db.VarChar(20)
}

model monthen {
  id      Int    @id @default(autoincrement())
  numberM Int    @unique(map: "MonthEN_numberM_key")
  month   String
}
