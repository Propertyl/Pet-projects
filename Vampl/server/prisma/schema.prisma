generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  ip    String 
  name  String
  phone String @unique
  password String 
  birthData String?
  image String? 
}

model Auth {
  ip String
  phone String @unique
  authorized Boolean @default(false)
}

model Chats {
  id Int @id @default(autoincrement())
  chatId String @unique 
  chatUsers Json
  messages Json
}

model MonthUA {
  id Int @id @default(autoincrement())
  numberM Int @unique
  month String
}

model MonthEN {
  id Int @id @default(autoincrement())
  numberM Int @unique
  month String
}

model OnlineStatuses {
  id Int @id @default(autoincrement())
  phone String @unique
  status Boolean
}

model UserTheme {
  id Int @id @default(autoincrement())
  phone String @unique
  theme String @default("light")
}

model Locales {
  page String  @unique
  language String
  text Json
}